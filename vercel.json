{
    "version": 2,
    "buildCommand": "vite build",
    "outputDirectory": "dist",
    "framework": "vite",
    "installCommand": "npm install",
    "routes": [
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "env": {
        "NODE_OPTIONS": "--max-old-space-size=4096"
    }
}